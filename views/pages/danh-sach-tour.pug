extends ../layouts/default.pug
include ../mixins/product-item.pug

block title
  title Danh sách tour

block main
  // Breadcrumb
  .breadcrumb
    .inner-image
      img(
        alt="" 
        src="assets/images/banner-6.jpg"
        )
    .inner-content
      .container
        .inner-wrap
          h1.inner-title Tour Nước Ngoài
          nav.inner-links
            a(href="#") Trang Chủ
            i.fa-solid.fa-angles-right
            a(href="#") Tour Nước Ngoài
  // End Breadcrumb

  // Section 9
  .section-9
    .container
      .inner-wrap
        .inner-left
          // Box Filter
          .box-filter
            .inner-filter-list
              .inner-head
                .inner-title Bộ Lọc
                i.fa-solid.fa-filter
              .inner-group
                .inner-label Điểm đi
                select
                  option(value="") -- Chọn điểm đi --
                  option(value="") Hà Nội
                  option(value="") Đà Nẵng
                  option(value="") Nha Trang
              .inner-group
                .inner-label Điểm đến
                select
                  option(value="") -- Chọn điểm đến --
                  option(value="") Hà Nội
                  option(value="") Đà Nẵng
                  option(value="") Nha Trang
              .inner-group
                .inner-label Ngày khởi hành
                input(type="date")
              .inner-group
                .inner-label Số Lượng Hành Khách
                .inner-input-list
                  .inner-input-item
                    .inner-label Người lớn:
                    input(
                      value="0" 
                      type="number"
                      )
                  .inner-input-item
                    .inner-label Trẻ em:
                    input(
                      value="0" 
                      type="number"
                      )
                  .inner-input-item
                    .inner-label Em bé:
                    input(
                      value="0" 
                      type="number"
                      )
              .inner-group
                .inner-label Mức giá
                select
                  option(value="") -- Chọn khoảng giá --
                  option(value="") Dưới 1tr
                  option(value="") Từ 1tr đến 3tr
                  option(value="") Từ 3tr đến 6tr
                  option(value="") Từ 6tr đến 10tr
                  option(value="") Trên 10tr
              button.inner-button Áp Dụng
          // End Box Filter
          .overlay
        .inner-right
          .inner-info-1
            h2.inner-title Tour Nước Ngoài
            .inner-desc
              | Du lịch Châu Á: là châu lục lớn và đông dân nhất thế giới. Châu Á cũng có nhiều danh lam thắng cảnh đẹp tại một số quốc gia như Hàn Quốc, Nhật Bản, Trung Quốc, Việt Nam,... và VK Travel là nhà tổ chức du lịch chuyên nghiệp hàng đầu Châu Á, đã 5 lần liên tiếp nhận giải TTG Travel Awards. Hãy cùng 28.Travel du lịch Châu Á để tận hưởng những dịch vụ tốt nhất.
          .inner-info-2
            .inner-sort
              .inner-label Sắp xếp:
              button
                | Giá tăng dần
                i.fa-solid.fa-circle-arrow-up
              button
                | Giá giảm dần
                i.fa-solid.fa-circle-arrow-down
              button.active
                | Khuyến Mại Hot
                i.fa-solid.fa-tag
              button
                | Xem Nhiều
                i.fa-solid.fa-eye
            .inner-total-item
              | Tất cả:
              b 101 Tour
            button.inner-button-filter
              | Bộ Lọc
              i.fa-solid.fa-filter
          .inner-list-tour
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
            +product-item()
          .box-pagination
            .inner-list-button
              button
                i.fa-solid.fa-angles-left
              button.active 1
              button 2
              button 3
              button 4
              button
                i.fa-solid.fa-angles-right
  // End Section 9